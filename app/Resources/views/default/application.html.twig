{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}

    <div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>REGISTRATION FOR BALTIC JEWISH NETWORK WEEKEND 2016</h1>
            <p>
                Please fill in the form to register for Baltic Jewish Network Weekend 2016 in Jurmala,
                Latvia. If you are selected to participate, we will get in touch with you shortly to continue
                the registration process. Please note that the spaces are limited.
            </p>

        </div>
    </div>
    <hr>
    <div class="row">
    <div class="col-sm-6">


        {% if app.session.flashBag.has('success') %}
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ msg }}
                </div>
            {% endfor %}
        {% else %}
            {% if app.session.flashBag.has('error') %}
                {% for msg in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ msg }}
                    </div>
                {% endfor %}
            {% endif %}

            {{ form_start(form, {'attr': {'class': 'my-form-class'} }) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}

        {% endif %}

    </div>
    </div>

    </div>


{% endblock body %}